@model SAP.Addon.Domain.Entities.Business.ZOAT1TMP
<tr>
@using (@Html.BeginCollectionItem("Details"))
{
    <td>
        @Html.EditorFor(m => m.ItemCode, new { onSelect = "onItemSelect", onData = "onItemAdditionalData", onFilter = "onItemFiltering" , DataTextField = "IC"})
    </td>
    <td>
        @Html.EditorFor(m => m.ItemName, new { onSelect = "onItemNameSelect", onData = "onItemNameAdditionalData", onFilter = "onItemNameFiltering", DataTextField = "IN" })
    </td>
    <td class="bg-lightyellow">
        <label ></label>
    </td>
    <td class="bg-lightyellow">
        <label ></label>
    </td>
    <td>
        @Html.DropDownListFor(m => m.U_OtherName, (SelectList)ViewBag.Origins, "", new { @class = "form-control input-sm" })
    </td>
    <td class="bg-lightyellow">
        @Html.Kendo().NumericTextBoxFor(m => m.RetPortion).HtmlAttributes(new { @class = "bg-lightyellow", style = "width:100%", @readonly = "readonly" })
    </td>
    <td class="bg-lightyellow">
        @Html.Kendo().NumericTextBoxFor(m => m.PlanAmtFC).HtmlAttributes(new { @class = "bg-lightyellow", style = "width:100%", @readonly = "readonly" })
    </td>
    <td class="bg-lightyellow">
        @Html.Kendo().NumericTextBoxFor(m => m.BasePrice).HtmlAttributes(new { @class = "bg-lightyellow", style = "width:100%", @readonly = "readonly" })
    </td>
    <td class="bg-lightyellow">
        <label></label>
    </td>
    <td>
        @Html.DropDownListFor(m => m.U_TenderUnit, (SelectList)ViewBag.UoMs, "", new { @class = "form-control input-sm" })
    </td>
    <td>
        @Html.Kendo().NumericTextBoxFor(m => m.CumQty).HtmlAttributes(new { style = "width:100%" }).Events(e => e.Change("CalculateAmount").Spin("CalculateAmount"))
    </td>
    <td>
        @Html.Kendo().NumericTextBoxFor(m => m.PlanQty).HtmlAttributes(new { style="width:100%" }).Events(e => e.Change("CalculateAmount").Spin("CalculateAmount"))
    </td>

    <td>
        @Html.Kendo().NumericTextBoxFor(m => m.UnitPrice).HtmlAttributes(new { style = "width:100%" }).Events(e => e.Change("CalculateAmount").Spin("CalculateAmount"))
    </td>
    <td>
        @Html.Kendo().NumericTextBoxFor(m => m.U_VatPrcnt).HtmlAttributes(new { style = "width:100%" }).Events(e => e.Change("CalculateAmount").Spin("CalculateAmount"))
    </td>
    <td>
        @Html.EditorFor(m => m.U_PriceAftVat, new { @class = "form-control input-sm" })
    </td>
    <td class="bg-lightyellow">
        @Html.Kendo().NumericTextBoxFor(m => m.PlanAmtLC).HtmlAttributes(new { @class = "bg-lightyellow", style = "width:100%", @readonly="readonly" })
    </td>
    <td>
        @Html.EditorFor(m => m.Discount, new { @class = "form-control input-sm" })
    </td>
    <td>
        @Html.DropDownListFor(m => m.LineStatus, (SelectList)ViewBag.LineStatus, "", new { @class = "form-control input-sm" })
    </td>
    <td>
        @Html.DropDownListFor(m => m.U_Notify, (SelectList)ViewBag.NotifyQty, "", new { @class = "form-control input-sm" })
    </td>
    <td>
        @Html.EditorFor(m => m.FreeTxt, new { @class = "form-control input-sm" })
    </td>
    <td>
        @Html.EditorFor(m => m.U_BPCode, new { Data = "onItemCodeData", onSelected = "onItemSelected", onFiltering = "onItemFiltering", DataTextField = "CC" })
    </td>
    <td>
        @Html.EditorFor(m => m.U_BPName, new { Data = "onItemNameData", onSelected = "onItemSelected", onFiltering = "onItemFiltering", DataTextField = "CN" })
    </td>
    <td>
        @Html.DropDownListFor(m => m.U_TenderType, (SelectList)ViewBag.TenderTypes, "", new { @class = "form-control input-sm" })
    </td>
    <td>
        @Html.Kendo().DatePickerFor(m => m.U_Start).HtmlAttributes(new { @class = "form-control input-sm" }).Format("dd/MM/yyy")
    </td>

    <td>
        @Html.Kendo().DatePickerFor(m => m.U_End).HtmlAttributes(new { @class = "form-control input-sm" }).Format("dd/MM/yyy")
    </td>
    <td>
        @Html.EditorFor(m => m.AgrNo, new { @class = "form-control input-sm" })
    </td>
    <td>
        @Html.EditorFor(m => m.AgrLineNum, new { @class = "form-control input-sm" })
    </td>
}
</tr>
